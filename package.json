    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.11.1",
    "prisma": "^4.16.1",
    "randomstring": "^1.2.2",
    "redis": "^4.6.4",
    "reflect-metadata": "^0.1.13",
    "sharp": "^0.30.4",
